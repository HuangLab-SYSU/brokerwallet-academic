<!-- custom_rectangle.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FEE2E2" />
            <corners android:radius="4dp" /><!-- Yellow fill color -->
        </shape>
    </item>
    <item android:left="0dp" android:bottom="-6dp" android:right="-6dp" android:top="-6dp"> <!-- 4dp is the width of the left border -->
        <shape android:shape="rectangle">
            <stroke android:color="#FFFF0000" android:width="4dp" />
            <corners android:radius="4dp" /><!-- Red left border -->
        </shape>
    </item>
</layer-list>



