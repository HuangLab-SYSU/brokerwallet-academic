<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/black" /> <!-- 按下状态的背景颜色 -->
            <stroke android:color="@color/green"
                android:width="2dp"/>
            <corners android:radius="24dp" /> <!-- 圆角半径 -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/black" /> <!-- 默认状态的背景颜色 -->
            <corners android:radius="24dp" /> <!-- 圆角半径 -->
            <stroke
                android:width="2dp"
                android:color="@color/green" />
        </shape>
    </item>
</selector>