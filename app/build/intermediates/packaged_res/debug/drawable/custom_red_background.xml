<!-- custom_rectangle.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/red_127" />
            <corners android:radius="6dp" /><!-- Yellow fill color -->
        </shape>
    </item>
    <item> <!-- 4dp is the width of the left border -->
        <shape android:shape="rectangle">
            <stroke android:color="@color/pink" android:width="2dp" />
            <corners android:radius="6dp" /><!-- Red left border -->
        </shape>
    </item>
</layer-list>