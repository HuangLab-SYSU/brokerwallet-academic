<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/topbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_bar"
            android:padding="16dp">

            <!-- 标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎨 NFT铸造"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- NFT名称 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NFT名称:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/nftNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="请输入NFT名称"
                android:background="@drawable/custom_edittext_border"
                android:padding="12dp" />

            <!-- NFT描述 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NFT描述:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/nftDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:hint="请输入NFT描述"
                android:background="@drawable/custom_edittext_border"
                android:padding="12dp"
                android:gravity="top"
                android:inputType="textMultiLine" />

            <!-- 图片类型 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="图片类型:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/imageTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edittext_border" />

            <!-- 图片选择 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择图片:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/selectImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="选择图片"
                android:background="@drawable/custom_button_background"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/selectedImageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="未选择图片"
                android:textSize="14sp"
                android:textColor="@color/grey_60"
                android:gravity="center" />

            <!-- 图片预览 -->
            <ImageView
                android:id="@+id/previewImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/dashed_border"
                android:scaleType="centerCrop" />

            <!-- 铸造按钮 -->
            <Button
                android:id="@+id/mintButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="铸造NFT"
                android:background="@drawable/custom_green_background"
                android:textColor="@color/white" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>




