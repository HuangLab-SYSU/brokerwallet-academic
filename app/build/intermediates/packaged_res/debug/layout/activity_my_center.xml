<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/topbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="👤 My"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center" />

        <!-- 勋章概览区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:background="@drawable/custom_edittext_border"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏆 My Medals"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 金牌 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_marginEnd="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🥇"
                        android:textSize="24sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/goldMedalCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gold"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Silver Medal -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_marginHorizontal="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🥈"
                        android:textSize="24sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/silverMedalCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Silver"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <!-- Bronze Medal -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_marginStart="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🥉"
                        android:textSize="24sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/bronzeMedalCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bronze"
                        android:textSize="12sp"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <!-- Medal Loading State -->
            <TextView
                android:id="@+id/medalLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="🏆 Loading medal data..."
                android:textSize="14sp"
                android:textColor="@color/grey_60"
                android:visibility="gone" />

            <!-- Medal Error State -->
            <TextView
                android:id="@+id/medalErrorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Medal data load failed"
                android:textSize="14sp"
                android:textColor="@color/red_127"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 标签页 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabSubmissions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📝 Submission History"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/custom_green_background"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tabNfts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🖼️ My NFTs"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/custom_green_background"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- 提交历史内容 -->
        <LinearLayout
            android:id="@+id/submissionsContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Submission History Loading -->
                <TextView
                    android:id="@+id/submissionsLoadingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="📝 Loading submission history..."
                    android:textSize="16sp"
                    android:textColor="@color/grey_60"
                    android:visibility="gone" />

                <!-- Submission History Error -->
                <TextView
                    android:id="@+id/submissionsErrorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Load Failed"
                    android:textSize="16sp"
                    android:textColor="@color/red_127"
                    android:visibility="gone" />

                <!-- Submission History Empty State -->
                <LinearLayout
                    android:id="@+id/submissionsEmptyStateLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📝"
                        android:textSize="48sp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Submission History"
                        android:textSize="18sp"
                        android:textColor="@color/grey_60"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit materials to earn medals &amp; NFT rewards~"
                        android:textSize="14sp"
                        android:textColor="@color/grey_60" />

                </LinearLayout>

                <!-- 提交历史列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/submissionsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <!-- NFT内容（添加下拉刷新） -->
        <LinearLayout
            android:id="@+id/nftsContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- NFT Total Count Display -->
            <TextView
                android:id="@+id/nftTotalCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Total: 0"
                android:textSize="14sp"
                android:textColor="@color/grey_60"
                android:visibility="gone" />

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/nftSwipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- NFT Loading -->
                    <TextView
                        android:id="@+id/nftLoadingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="🖼️ Loading NFTs..."
                        android:textSize="16sp"
                        android:textColor="@color/grey_60"
                        android:visibility="gone" />

                    <!-- NFT Error -->
                    <TextView
                        android:id="@+id/nftErrorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Load Failed"
                        android:textSize="16sp"
                        android:textColor="@color/red_127"
                        android:visibility="gone" />

                    <!-- NFT Empty State -->
                    <LinearLayout
                        android:id="@+id/nftEmptyStateLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🖼️"
                            android:textSize="48sp"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No NFTs"
                            android:textSize="18sp"
                            android:textColor="@color/grey_60"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Go mint your first NFT!"
                            android:textSize="14sp"
                            android:textColor="@color/grey_60" />

                    </LinearLayout>

                    <!-- NFT列表 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/nftRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:visibility="gone" />

                </RelativeLayout>

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>