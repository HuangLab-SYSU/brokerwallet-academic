<!-- custom_rectangle.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item android:left="-4dp" android:bottom="-4dp" android:right="-4dp" android:top="0dp"> <!-- 4dp is the width of the left border -->
        <shape android:shape="rectangle">
            <stroke android:color="@color/grey_60" android:width="0.5dp" />
        </shape>
    </item>
</layer-list>