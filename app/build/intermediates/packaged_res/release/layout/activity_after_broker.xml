        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_alignParentBottom="true">

            <!-- 第一个按钮 -->
            <android.widget.Button
                android:id="@+id/btn_stake"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Stake more"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/custom_button_border_green"
                android:drawableLeft="@drawable/fire"
                android:gravity="left|center_vertical"
                android:drawablePadding="8dp"
                android:clickable="true"
                android:onClick="remindMeLater"
                android:layout_marginRight="16dp"/>

            <!-- 第二个按钮 -->
            <android.widget.Button
                android:id="@+id/btn_withdraw"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Withdraw"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:background="@drawable/custom_button_border_red"
                android:drawableLeft="@drawable/smile"
                android:gravity="left|center_vertical"
                android:drawablePadding="8dp"
                android:clickable="true"
                android:onClick="nextAction" />

        </LinearLayout>





    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingHorizontal="34dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:columnCount="4"

            android:rowCount="2">

            <!-- 第一行，放四张 SVG 图标 -->
            <ImageView
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:src="@drawable/plus_icon" />

            <ImageView
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:src="@drawable/send_icon" />

            <ImageView
                android:id="@+id/swap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:src="@drawable/transaction_icon" />

            <!-- 第二行，四个 TextView 表示图标名称 -->
            <ImageView
                android:id="@+id/broker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="center"

                android:src="@drawable/line_chart_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"

                android:clickable="true"
                android:text="Buy"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:text="Send"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:text="Swap"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:text="Broker"
                android:textColor="#000000"
                android:textSize="16sp" />


        </GridLayout>

        <LinearLayout
            android:id="@+id/support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="48dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:src="@drawable/question_circle"
                android:clickable="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="BrokerFi support"
                android:textColor="#888888"
                android:textSize="14sp"
                android:clickable="true"/>




        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>