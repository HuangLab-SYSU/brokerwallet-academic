<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F0F0F0" /> <!-- 按下状态的背景颜色 -->
            <corners android:radius="28dp" /> <!-- 圆角半径 -->
            <stroke
                android:width="1dp"
                android:color="#000000" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- 默认状态的背景颜色 -->
            <corners android:radius="28dp" /> <!-- 圆角半径 -->
            <stroke
                android:width="1dp"
                android:color="#000000" />
        </shape>
    </item>

</selector>