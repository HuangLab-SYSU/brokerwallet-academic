<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/topbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar"
        android:orientation="vertical">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="🏆 勋章排行榜"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center" />

        <!-- 内容区域 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- 加载中文本 -->
            <TextView
                android:id="@+id/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="加载中..."
                android:textSize="16sp"
                android:textColor="@color/grey_60"
                android:visibility="gone" />

            <!-- 错误文本 -->
            <TextView
                android:id="@+id/errorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="加载失败"
                android:textSize="16sp"
                android:textColor="@color/red_127"
                android:visibility="gone" />

            <!-- 空状态提示 -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏆"
                    android:textSize="48sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无排行榜数据"
                    android:textSize="18sp"
                    android:textColor="@color/grey_60"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快去提交证明文件获得勋章吧！"
                    android:textSize="14sp"
                    android:textColor="@color/grey_60" />

            </LinearLayout>

            <!-- 排行榜列表 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:visibility="gone" />

        </RelativeLayout>

        <!-- 底部导航按钮 -->
        <!-- 第一行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/proofAndNftButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📄 证明提交"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/custom_green_background"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/nftViewButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🖼️ NFT查看"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/custom_button_background"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- 第二行按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/submissionHistoryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📝 我的提交历史"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/custom_button_background"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
