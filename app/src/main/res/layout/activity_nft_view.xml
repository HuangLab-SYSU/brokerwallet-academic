<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/topbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/action_bar">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="🖼️ NFT查看"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center" />

        <!-- 标签页按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myNFTsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的NFT"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/custom_green_background"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true" />

            <TextView
                android:id="@+id/allNFTsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="所有NFT"
                android:textSize="16sp"
                android:textColor="@color/grey_60"
                android:background="@drawable/custom_button_bg_gray"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true" />

        </LinearLayout>

        <!-- 加载中文本 -->
        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="加载中..."
            android:textSize="16sp"
            android:textColor="@color/grey_60"
            android:visibility="gone" />

        <!-- 错误文本 -->
        <TextView
            android:id="@+id/errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="加载失败"
            android:textSize="16sp"
            android:textColor="@color/red_127"
            android:visibility="gone" />

        <!-- NFT列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:padding="16dp"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>




