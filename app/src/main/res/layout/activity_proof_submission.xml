<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/topbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_bar"
            android:padding="16dp">

            <!-- 标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📄 证明材料提交"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- 花名（用户昵称） -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👤 花名（用户昵称）:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/displayNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="请输入您的花名（用于排行榜显示）"
                android:background="@drawable/custom_edittext_border"
                android:padding="12dp" />

            <!-- 代表作 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏆 代表作:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/representativeWorkEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="请输入您的代表作（可选）"
                android:background="@drawable/custom_edittext_border"
                android:padding="12dp" />

            <!-- 是否展示代表作 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📢 在排行榜展示代表作:"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/showRepresentativeWorkSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="注：需要管理员审核通过后才会在排行榜显示"
                android:textSize="12sp"
                android:textColor="@color/grey_60" />

            <!-- 作者信息 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✍️ 作者信息:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/authorInfoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="请输入作者姓名或作者列表"
                android:background="@drawable/custom_edittext_border"
                android:padding="12dp" />

            <!-- 事件类型 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事件类型:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/eventTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edittext_border" />

            <!-- 事件描述 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事件描述:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/eventDescriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:hint="详细描述与BlockEmulator的关联事件"
                android:background="@drawable/custom_edittext_border"
                android:padding="12dp"
                android:gravity="top"
                android:inputType="textMultiLine" />

            <!-- 贡献等级 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贡献等级:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/contributionLevelSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edittext_border" />

            <!-- 文件选择 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="证明文件:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/selectFileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="选择文件"
                android:background="@drawable/custom_button_background"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/selectedFileText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="未选择文件"
                android:textSize="14sp"
                android:textColor="@color/grey_60"
                android:gravity="center" />

            <!-- 提交按钮 -->
            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="提交证明材料"
                android:background="@drawable/custom_green_background"
                android:textColor="@color/white" />

            <!-- NFT铸造按钮 -->
            <TextView
                android:id="@+id/nftMintButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="🎨 铸造NFT"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/custom_button_bg_gray"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>




